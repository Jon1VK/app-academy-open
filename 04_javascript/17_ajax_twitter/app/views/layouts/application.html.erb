<!DOCTYPE html>
<html>
  <head>
    <title>AjaxTwitter</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Roboto&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script>
      window.users = <%= render(partial: 'users/users.json').html_safe %>;
    </script>
  </head>

  <body>
    <header class="header">
      <nav class="main-nav">
        <h1><%= link_to 'Twitter', root_url %></h1>

        <ul>
          <li><a href="<%= feed_url %>">Feed</a></li>
          <li><a href="<%= search_users_url %>">User Search</a></li>

          <% if current_user %>
            <li><%= link_to 'Logout!', session_url, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Login', new_session_url %></li>
            <li><%= link_to 'Signup', new_user_url %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
