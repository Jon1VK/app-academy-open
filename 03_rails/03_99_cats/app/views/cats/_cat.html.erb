    <th scope="column">Attribute</th>
    <th scope="column">Value</th>
  </thead>
  <tbody>
    <tr>
      <td>Age</td>
      <td><%= cat.age %></td>
    </tr>
    <tr>
      <td>Birth Date</td>
      <td><%= cat.birth_date %></td>
    </tr>
    <tr>
      <td>Color</td>
