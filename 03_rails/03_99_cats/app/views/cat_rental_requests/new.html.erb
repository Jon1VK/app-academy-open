<form action="<%= cat_rental_requests_url %>" method="post">
  <%= token_tag %>

  <label for="cat_rental_request_cat_id">Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_rental_request_cat_id">
    <option value="">-- Select a cat --</option>
    <% Cat.all.each do |cat| %>
      <option <%= "selected" if cat.id == @cat_rental_request.cat_id %> value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <label for="cat_rental_request_start_date">Start date</label>
  <input type="date" name="cat_rental_request[start_date]" id="cat_rental_request_start_date" value="<%= @cat_rental_request.start_date %>">

  <label for="cat_rental_request_end_date">End date</label>
  <input type="date" name="cat_rental_request[end_date]" id="cat_rental_request_end_date" value="<%= @cat_rental_request.end_date %>">

  <input type="submit" value="Submit">
</form>