<%= render @cat %>

<h1>Rental requests</h1>
<% if @cat_rental_requests.empty? %>
  <p><%= @cat.name %> has no rental requests.</p>
<% else %>
  <%= render 'cat_rental_requests/table', cat_rental_requests: @cat_rental_requests %>
<% end %>

<a href="<%= new_cat_rental_request_url(cat_id: @cat.id) %>">Make new request</a>